      <div class="row">
        <div class="container">
          <div class="panel panel-primary">
            <div class="page-header">
              <h1>Audio Stream</h1>
            </div>
            <div class="panel-body">
              <div style="wdith:90%;" id="visualizer"></div>
              <!--      <audio   id="player"  src="http://192.99.240.255:8010/live.mp3"
              controls="" autoplay="" preload autobuffer></audio>
              -->
              <form class="form-horizontal">
                <fieldset>
                  <div class="form-group">
                    <label for="audiostreamurl" class="col-lg-2 control-label"> </label>
                    <div class="col-lg-10">
                      <div class="checkbox">
                        <label>
                          <input type="checkbox"> Enable
                        </label>
                      </div>
                      <input type="url" class="form-control" id="audiostreamurl" placeholder="Stream URL">
                    </div>
                  </div>
                  <div class="col-lg-10 col-lg-offset-2">
                    <span id="enableaudion" src="#" href="#" class="btn btn-primary">
                    <span class="glyphicon glyphicon-volume-up"></span> Enable Audio Stream</span>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="panel panel-primary">
          <div class="page-header">
            <h1>Color DJ</h1>
          </div>
          <div class="panel-body">
            <form class="form-horizontal">
              <fieldset>
                <div class="shortcuts">

                <div class="form-group djpanel">
                  <div class="col-lg-4 col-lg-offset-2 ">
                    <input type="text" class="form-control" id="sc1" placeholder="Key to press" pattern="^[a-zA-Z]{1,1}$">
                  </div>
                  <div class="col-lg-4 col-lg-offset-2 ">
                    <div class="input-group demo2">
                      <input type="text" id="c1" class="form-control" pattern="^#?([a-fA-F0-9]{6}|[a-fA-F0-9]{3})$"/>
                      <span class="input-group-addon" ><i></i></span>
                    </div>
                  </div>
                </div>

              </div>
                <div class="col-lg-10 col-lg-offset-2 text-right">
                  <span onclick="addRow()" class="btn btn-primary">
                  <span class="glyphicon glyphicon-volume-up">
                  </span> Add Shoutcut</span>
                  <span onclick="sendShortcuts()" type="submit" class="btn btn-primary">
                  <span class="glyphicon glyphicon-floppy-disk">
                  </span> Save</span>
                </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
  $(function(){
  $('.demo2').colorpicker();
  });
  </script>

