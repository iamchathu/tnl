<script id="entry-template" type="text/x-handlebars-template">
       <div class="form-group djpanel">
                  <div class="col-lg-4 col-lg-offset-2 ">
                    <input type="text" class="form-control" id="sc{{id}}" 
                    placeholder="Key to press" pattern="^[a-zA-Z]{1,1}$"
                      value="{{s}}">
                  </div>
                  <div class="col-lg-4 col-lg-offset-2 ">
                    <div class="input-group demo2">
                      <input type="text" id="c{{id}}" class="form-control"
                         value="{{c}}"
                          pattern="^#?([a-fA-F0-9]{6}|[a-fA-F0-9]{3})$"/>
                      <span class="input-group-addon" ><i></i></span>
                    </div>
                  </div>
                </div>
</script>

